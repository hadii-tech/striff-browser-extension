{
  "manifest_version": 2,
  "name": "striff-browser-extension",
  "description": "Automatically generates striffs for GitHub pull requests.",
  "homepage_url": "https://striff.io",
  "author": "HADII Technology",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Click to configure Striffs"
  },
  "background": {
    "scripts": ["/background.js"]
  },
  "permissions": ["storage", "tabs", "activeTab", "alarms"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["/pull-request.js"]
    }
  ]
}
